<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.RecipeDetailActivity"
    android:background="@color/Background">

    <androidx.core.widget.ContentLoadingProgressBar
        android:layout_width="match_parent"
        android:paddingLeft="120dp"
        android:paddingRight="120dp"
        android:layout_height="match_parent"
        style="?android:attr/progressBarStyleLargeInverse"
        android:id="@+id/loadingBar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/recipeImage"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:padding="10dp"
                android:background="@color/BackgroundSecondary"/>

            <TextView
                android:id="@+id/recipeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20sp"
                android:paddingBottom="20sp"
                android:text="title"
                android:gravity="center"
                android:textSize="30dp"
                android:textColor="@color/TextMain"
                android:background="@color/BackgroundSecondary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:background="@color/BackgroundSecondary">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="20dp"
                    android:text="Cook time: "
                    android:textColor="@color/TextMain"/>

                    <TextView
                        android:id="@+id/cookTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ready in mins"
                        android:textSize="20dp"
                        android:textColor="@color/TextMain"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="20dp"
                        android:text="minutes"
                        android:textColor="@color/TextMain"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/recipeIngredientListContainer"
                />

            <Button
                android:id="@+id/gotoRecipeOnline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                style="@style/appButton"
                android:text="go to recipe url"/>

            <Button
                android:id="@+id/addToRecipeBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                style="@style/appButton"
                android:text="add to a recipe book"/>

            <EditText
                android:id="@+id/recipeNotes"
                android:inputType="textMultiLine"
                android:minLines="4"
                android:lines="20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/appInputMultiline"
                android:hint="Notes..."
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="15dp"/>

            <Button
                android:id="@+id/updateRecipeNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                style="@style/appButton"
                android:text="Update Saved Recipe Notes"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>