<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.SearchFragment"
    android:background="@color/Background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="12dp"
        android:gravity="left"
        android:text="@string/searchterm"
        android:textColor="@color/TextMain"/>

    <EditText
        android:id="@+id/searchTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/appInput"
        android:hint="@string/search"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/filters"
        android:textSize="24dp"
        android:gravity="center"
        android:textColor="@color/TextMain"
        android:background="@color/BackgroundSecondary"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="12dp"
        android:gravity="left"
        android:text="@string/recipetype"
        android:textColor="@color/TextMain"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center">

        <CheckBox
            android:id="@+id/paleoFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:text="@string/paleo"
            android:buttonTint="@color/AssetAccentColor"
            android:textColor="@color/TextMain"/>

        <CheckBox
            android:id="@+id/ketoFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:text="@string/keto"
            android:buttonTint="@color/AssetAccentColor"
            android:textColor="@color/TextMain"/>

        <CheckBox
            android:id="@+id/vegetarianFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:text="@string/vegetarian"
            android:buttonTint="@color/AssetAccentColor"
            android:textColor="@color/TextMain"/>

        <CheckBox
            android:id="@+id/veganFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:text="@string/vegan"
            android:buttonTint="@color/AssetAccentColor"
            android:textColor="@color/TextMain"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="12dp"
        android:gravity="left"
        android:text="@string/filterbycuisine"
        android:textColor="@color/TextMain"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center">

        <CheckBox
            android:id="@+id/italianFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:text="@string/italian"
            android:buttonTint="@color/AssetAccentColor"
            android:textColor="@color/TextMain"/>

        <CheckBox
            android:id="@+id/americanFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:text="@string/american"
            android:buttonTint="@color/AssetAccentColor"
            android:textColor="@color/TextMain"/>

        <CheckBox
            android:id="@+id/frenchFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:text="@string/french"
            android:buttonTint="@color/AssetAccentColor"
            android:textColor="@color/TextMain"/>

        <CheckBox
            android:id="@+id/latinAmericanFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:text="@string/latinamerican"
            android:buttonTint="@color/AssetAccentColor"
            android:textColor="@color/TextMain"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="12dp"
        android:gravity="left"
        android:text="@string/exclude"
        android:textColor="@color/TextMain"/>

    <EditText
        android:id="@+id/excludeFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/appInput"
        android:layout_marginHorizontal="10dp"
        android:hint="@string/ingredient"
        />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/appButton"
        android:layout_margin="20dp"
        android:text="@string/search"
        />

