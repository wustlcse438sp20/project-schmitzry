<resources>

    <!--Base application theme.-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/Background</item>
        <item name="colorPrimaryDark">@color/AssetAccentColor</item>
        <item name="colorAccent">@color/AssetAccentColor</item>
    </style>

    <style name="appButton">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:background">@color/ButtonBackground</item>
        <item name="android:textColor">@color/TextMain</item>
        <item name="android:textSize">18dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="appInput">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/TextMain</item>
        <item name="android:textColorHint">@color/TextSecondary</item>
        <item name="android:backgroundTint">@color/AssetAccentColor</item>
    </style>

    <style name="appInputMultiline">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:padding">3dp</item>
        <item name="android:textColor">@color/TextMain</item>
        <item name="android:textColorHint">@color/TextSecondary</item>
        <item name="android:backgroundTint">@color/AssetAccentColor</item>
    </style>

